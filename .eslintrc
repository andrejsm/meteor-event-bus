rules:
  indent:
    - 2
    - 2
    - SwitchCase: 1
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - never
  comma-dangle:
    - 2
    - "always-multiline"

env:
  es6: true
  node: true
  meteor: true

globals:
  when: true
  emit: true

extends: "eslint:recommended"
